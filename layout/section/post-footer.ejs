<footer>
    <p class="meta">
        <span class="byline author vcard">Posted by <span class="fn"><%- post.author %> (C)2016</span></span>
        <%- time(post.date) %>
        <% if (post.categories && post.categories.length != 0) { %>
            <span class="categories">
            <% post.categories.forEach(function(category) { %>
                <a class="category" href="/categories/<%- category %>/"><%- category %></a>,
            <% }); %>
            </span>
        <% } %>
    </p>
    <p class="meta">
        <% if (post.prev) { %>
            <a class="basic-alignment left" href="<%- post.prev.path %>" title="Previous Post: <%- post.prev.title %>">&laquo; <%- post.prev.title %></a>
        <% }
        if (post.next) { %>
            <a class="basic-alignment right" href="<%- post.next.path %>" title="Next Post: <%- post.next.title %>"><%- post.next.title %> &raquo;</a>
        <% } %>
    </p>
</footer>
